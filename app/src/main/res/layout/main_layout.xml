<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:id="@+id/row_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/header1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/app_title"
                android:textColor="@color/darkgreen"
                android:textSize="35sp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold" />
        </TableRow>
    </LinearLayout>

    <!-- first row of the table layout-->
    <TableRow
        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imageView01"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/icon_holder"
            app:srcCompat="@drawable/bexshoes"
            android:padding="18dp"
            android:src="@drawable/bexshoes"
            android:background="@color/milk"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/icon_holder"
            android:gravity="center"
            android:padding="18dp"
            android:src="@drawable/laceupboots"
            android:background="@color/green"/>
    </TableRow>


    <TableRow
        android:id="@+id/row3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/icon_holder"
            android:gravity="center"
            android:padding="18dp"
            android:src="@drawable/loafers"
            android:background="@color/lightgreen"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/icon_holder"
            android:gravity="center"
            android:padding="18dp"
            android:src="@drawable/maryjanes"
            android:background="@color/orange"/>
    </TableRow>

</TableLayout>